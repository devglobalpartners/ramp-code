{
    "experiment_name":"EffUnet baseline with augmentation and early stopping",
    "logging":{
        "log_experiment":true,
        "experiment_log_path":"ramp-data/TRAIN/all_ramp_experiments.csv",
        "experiment_notes":"using CLR and augmentation (color jitter, rotation)",
        "fields_to_log":[
            "experiment_name", 
            "experiment_notes", 
            "timestamp",
            "num_epochs",
            "batch_size",
            "output_img_shape",
            "input_img_shape",
            "get_loss_fn_name",
            "use_saved_model",
            "use_aug",
            "use_early_stopping",
            "use_clr",
            "random_seed",
            "num_classes",
            "get_optimizer_fn_name",
            "tb_logs_dir",
            "get_model_fn_name",
            "backbone",
            "train_img_dir",
            "train_mask_dir",
            "val_img_dir",
            "val_mask_dir"
        ]
    },
    "datasets":{
        "train_img_dir":"ramp-data/TRAIN/Shanghai-Paris-Oman/chips",
        "train_mask_dir":"ramp-data/TRAIN/Shanghai-Paris-Oman/bin-masks",
        "val_img_dir":"ramp-data/TRAIN/Shanghai-Paris-Oman/valchips",
        "val_mask_dir":"ramp-data/TRAIN/Shanghai-Paris-Oman/val-binmasks"
    },
    "num_classes":2,
    "num_epochs":200,
    "batch_size":8,
    "input_img_shape":[256,256],
    "output_img_shape":[256,256],
    "loss":{
        "get_loss_fn_name":"get_sparse_categorical_crossentropy_fn",
        "loss_fn_parms":{}
    },
    "metrics":{
        "use_metrics":true,
        "get_metrics_fn_names":["get_sparse_categorical_accuracy_fn"],
        "metrics_fn_parms":[{}]
    },
    "optimizer":{
        "get_optimizer_fn_name":"get_adam_optimizer",
        "optimizer_fn_parms":{}
    },
    "model":{
        "get_model_fn_name":"get_effunet_model",
        "model_fn_parms":{
            "backbone":"efficientnetb0",
            "classes":["background","buildings"]
        }
    },
    "saved_model":{
        "use_saved_model":false,
        "save_optimizer_state":false,
        "saved_model_path":"ramp-data/TRAIN/Shanghai-Paris-Oman/model-checkpts/20220627-172330/model_20220627-172330_110.tf"
    },
    "augmentation":{
        "use_aug":true,
        "get_augmentation_fn_name":"get_augmentation_fn",
        "aug_list":["Rotate","ColorJitter"],
        "aug_parms":[
            {
                "border_mode":"BORDER_CONSTANT",
                "interpolation":"INTER_NEAREST",
                "value":[0.0,0.0,0.0],
                "mask_value":0,
                "p":0.7
            },
            {
                "p":0.7
            }
        ]
    },
    "early_stopping":{
        "use_early_stopping":false,
        "early_stopping_parms":{
            "monitor":"val_loss",
            "min_delta":0.01,
            "patience":35,
            "verbose":0,
            "mode":"auto",
            "restore_best_weights":false
        }
    },
    "cyclic_learning_scheduler":{
        "use_clr":true,
        "get_clr_callback_fn_name":"get_clr_callback_fn",
        "clr_callback_parms":{
            "mode":"triangular2",
            "stepsize":8,
            "max_lr":1e-4,
            "base_lr":3.25e-6
        },
        "clr_plot_dir":"ramp-data/TRAIN/Shanghai-Paris-Oman/plots"
    },
    "tensorboard":{
        "use_tb":true,
        "tb_logs_dir":"ramp-data/TRAIN/Shanghai-Paris-Oman/logs",
        "get_tb_callback_fn_name":"get_tb_callback_fn",
        "tb_callback_parms":{
            "histogram_freq":1,
            "update_freq":"batch"
        }
    },    
    "prediction_logging":{
        "use_prediction_logging":true,
        "get_prediction_logging_fn_name":"get_pred_logging_callback_fn"
    },
    "model_checkpts":{
        "use_model_checkpts":true,
        "model_checkpts_dir": "ramp-data/TRAIN/Shanghai-Paris-Oman/model-checkpts",
        "get_model_checkpt_callback_fn_name":"get_model_checkpt_callback_fn",
        "model_checkpt_callback_parms":{
            "mode":"max",
            "save_best_only":true
        }
    },
    "random_seed":20220523
}